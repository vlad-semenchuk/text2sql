{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": false,
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@modules/config": [
        "src/modules/shared/config/index"
      ],
      "@modules/datasource": [
        "src/modules/shared/datasource/index"
      ],
      "@modules/llm": [
        "src/modules/shared/llm/index"
      ],
      "@modules/text2sql": [
        "src/libs/text2sql/src/index"
      ]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  }
}
