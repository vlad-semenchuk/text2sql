{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": false,
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@libs/config": [
        "src/libs/shared/config/src/index"
      ],
      "@libs/core": [
        "src/libs/shared/core/src/index"
      ],
      "@libs/data-access-postgres": [
        "src/libs/shared/data-access-postgres/src/index"
      ],
      "@libs/text2sql": [
        "src/libs/text2sql/src/index"
      ]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  }
}
